<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg01" >

    <RelativeLayout
        android:id="@+id/main_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#99ffffff"
        android:padding="10dp" >

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="종료"
            android:textColor="@color/btn_default" />

        <EditText
            android:id="@+id/passwordEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passwordLabel"
            android:layout_alignBottom="@+id/passwordLabel"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/passwordLabel"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/EmailEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/EmailLabel"
            android:layout_alignBottom="@+id/EmailLabel"
            android:layout_alignRight="@+id/passwordEntry"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/passwordLabel"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/mypi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/pi_200x66" />

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypi_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/header"
            android:textColor="#0c4881" />

        <Button
            android:id="@+id/SignupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="회원가입"
            android:textColor="@color/btn_default" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEntry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="로그인"
            android:textColor="@color/btn_default" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/headline"
            android:layout_below="@+id/EmailLabel"
            android:paddingTop="16dp"
            android:text="비밀번호"
            android:textColor="#0c4881"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/EmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwordLabel"
            android:layout_below="@+id/headline"
            android:layout_marginTop="31dp"
            android:paddingTop="4dp"
            android:text="이메일"
            android:textColor="#0c4881"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#64000000"
        android:gravity="center_horizontal"
        android:text="@string/footer"
        android:textSize="12sp" />

</RelativeLayout>